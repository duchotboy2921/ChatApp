<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewfeedActivity"
    android:background="@drawable/bg_login">
    <ImageView
        android:id="@+id/img_back_add_newfeed"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/txt_add_newfeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_back_add_newfeed"
        android:text="Tạo bài viết"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="24dp"
    />
    <Button
        android:id="@+id/btn_add_newfeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Đăng"/>
    <View
        android:id="@+id/line_login"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light1"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_newfeed"
        android:layout_marginTop="3dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_add_newfeed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/line_login"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/txt_username_add_newfeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintTop_toBottomOf="@+id/line_login"
        app:layout_constraintLeft_toRightOf="@+id/profile_image_add_newfeed"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="23sp"/>
    <EditText
        android:id="@+id/edt_caption_add_newfeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/txt_username_add_newfeed"
        android:layout_marginTop="20dp"
        android:hint="Bạn đang nghĩ gì?">
    </EditText>
    <ImageView
        android:id="@+id/icon_add_image_add_newfeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_caption_add_newfeed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/icon_tag_image_add_newfeed"
        android:src="@drawable/add_image"/>
    <ImageView
        android:id="@+id/icon_tag_image_add_newfeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/icon_add_image_add_newfeed"
        app:layout_constraintEnd_toStartOf="@id/icon_pos_image_add_newfeed"
        app:layout_constraintTop_toBottomOf="@+id/edt_caption_add_newfeed"
        android:src="@drawable/tag"/>
    <ImageView
        android:id="@+id/icon_pos_image_add_newfeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/icon_tag_image_add_newfeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_caption_add_newfeed"
        android:src="@drawable/possition"/>
    <ScrollView
        android:id="@+id/scrollview_add_newfeed"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_add_image_add_newfeed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/img_add_image"
            android:layout_width="match_parent"
            android:layout_height="400dp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>