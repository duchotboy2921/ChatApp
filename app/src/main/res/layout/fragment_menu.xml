<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_fragment_menu"
        android:src="@drawable/dog"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txt_username_fragment_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_profile_fragment_menu"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="name"
        android:textStyle="bold"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/txt_email_fragment_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_username_fragment_menu"
        app:layout_constraintLeft_toRightOf="@id/img_profile_fragment_menu"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:text="name"
        android:textSize="18sp" />
    <View
        android:id="@+id/line_login"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light1"
        app:layout_constraintTop_toBottomOf="@+id/img_profile_fragment_menu"
        android:layout_marginTop="4dp"
        />
    <ImageView
        android:id="@+id/img_signout_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/img_profile_fragment_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logoutwhite"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/txt_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_profile_fragment_menu"
        app:layout_constraintLeft_toRightOf="@+id/img_signout_icon"
        android:text="Sign out"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="6dp"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>